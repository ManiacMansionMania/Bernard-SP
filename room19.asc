// Kellerraum 1

/****************************
*   Raum-Funktionen
****************************/

function room_Load()
{
  Door[eTuerKeller2].Init(oTuer01, hTuer01);
}

function room_AfterFadeIn()
{
  if(bTreppe1)
  {
    player.Walk(50, 115, eBlock, eWalkableAreas);
    player.FaceDirection(eDirectionDown);
    bTreppe1 = false;
  }
}

function room_Leave()
{

}

/****************************
*   Tür-Hotspot-Funktionen
*
***************************/

function hTuer01_AnyClick()
{
  if(Door[eTuerKeller2].Click()==0) Unhandled();
}

/****************************
*   Hotspot-Funktionen
****************************/

function hFlur_AnyClick()
{
  if (any_click_move(75, 12, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
      Wait(5);
			player.ChangeRoom(17, 285, 118);
      player.FaceDirection(eDirectionLeft);
      bTreppe1 = true;
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Da geht es nach oben.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Das kann ich nicht nehmen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.ChangeRoom(17, 285, 118);
      player.FaceDirection(eDirectionLeft);
      bTreppe1 = true;
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
      player.Say("Es geht nicht auf.");
		}
    else if (UsedAction(eActClose))
		{
			Wait(5);
      player.Say("Es geht nicht zu.");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
      player.Say("Da bewegt sich nichts.");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
      player.Say("Da bewegt sich nichts.");
		}
    else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Das kann ich hier nicht benutzen.");
		}
		else Unhandled();
  }
}

