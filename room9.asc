			Wait(5);
			player.Say("Eine Lampe.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
      player.FaceDirection(eDirectionDown);
      Wait(10);
			player.Say("Schon mal was von Taschenlampe gehört?");
		}
